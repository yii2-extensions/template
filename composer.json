{
    "name": "yii2/template",
    "type": "library",
    "description": "_____",
    "keywords": [
        "_____"
    ],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "yiisoft/yii2": "^2.2"
    },
    "require-dev": {
        "infection/infection": "^0.27|^0.31",
        "maglnet/composer-require-checker": "^4.1",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-strict-rules": "^2.0.3",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^2.1",
        "symplify/easy-coding-standard": "^13.0",
        "yii2-extensions/phpstan": "^0.3"
    },
    "autoload": {
        "psr-4": {
            "yii\\template\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "yii\\template\\tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "phpstan/extension-installer": true,
            "yiisoft/yii2-composer": true
        }
    },
    "scripts": {
        "check-dependencies": "./vendor/bin/composer-require-checker check",
        "ecs": "./vendor/bin/ecs --fix",
        "mutation": "./vendor/bin/infection --threads=4 --ignore-msi-with-no-mutations --min-msi=100 --min-covered-msi=100",
        "mutation-static": "./vendor/bin/infection --threads=4 --ignore-msi-with-no-mutations --min-msi=100 --min-covered-msi=100 --static-analysis-tool=phpstan --static-analysis-tool-options='--memory-limit=-1'",
        "rector": "./vendor/bin/rector process src",
        "static": "./vendor/bin/phpstan --memory-limit=-1",
        "sync-metadata": [
            "curl -o .editorconfig https://raw.githubusercontent.com/yii2-extensions/template/main/.editorconfig",
            "curl -o .gitattributes https://raw.githubusercontent.com/yii2-extensions/template/main/.gitattributes",
            "curl -o .gitignore https://raw.githubusercontent.com/yii2-extensions/template/main/.gitignore",
            "curl -o ecs.php https://raw.githubusercontent.com/yii2-extensions/template/main/ecs.php",
            "curl -o infection.json5 https://raw.githubusercontent.com/yii2-extensions/template/main/infection.json5",
            "curl -o phpstan.neon https://raw.githubusercontent.com/yii2-extensions/template/main/phpstan.neon",
            "curl -o phpunit.xml.dist https://raw.githubusercontent.com/yii2-extensions/template/main/phpunit.xml.dist",
            "curl -o rector.php https://raw.githubusercontent.com/yii2-extensions/template/main/rector.php"
        ],
        "tests": "./vendor/bin/phpunit"
    }
}
